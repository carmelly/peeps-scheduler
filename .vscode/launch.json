{
  "version": "0.2.0",
  "inputs": [
    { "id": "dataDir", "type": "promptString", "description": "Enter data-dir:" },
    {
      "id": "resultsFile",
      "type": "pickString",
      "description": "Pick schedule filename",
      "options": [ "results.json", "actual_attendance.json" ]
    }
  ],
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Scheduler",
      "type": "debugpy",
      "request": "launch",
      "module": "peeps_scheduler.main",
      "args": [ "run", "--data-folder", "${input:dataDir}" ],
      "console": "integratedTerminal"
    },
    {
      "name": "Availability Report",
      "type": "debugpy",
      "request": "launch",
      "module": "peeps_scheduler.main",
      "args": [ "availability-report", "--data-folder", "${input:dataDir}" ],
      "console": "integratedTerminal"
    },
    {
      "name": "Apply Results",
      "type": "debugpy",
      "request": "launch",
      "module": "peeps_scheduler.main",
      "args": [ "apply-results", "--period-folder", "${input:dataDir}" ],
      "console": "integratedTerminal"
    },
    {
      "name": "Print Schedule",
      "type": "debugpy",
      "request": "launch",
      "module": "peeps_scheduler.main",
      "args": [ "pretty-results", "--period-folder", "${input:dataDir}", "--results-file", "${input:resultsFile}" ],
      "console": "integratedTerminal"
    }
  ]
}